<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.app.controllers.StudentController">
    <children>
        <Label text="Student Management" />
        <TextField fx:id="studentIdField" promptText="Student ID" />
        <TextField fx:id="studentNameField" promptText="Student Name" />
        <TextField fx:id="studentGpaField" promptText="GPA" />
        <Button text="Add Student" onAction="#addStudent"/>
        <Button text="Load Students" onAction="#loadStudents"/>
        <TextField fx:id="filterGpaField" promptText="Filter by GPA" />
        <Button text="Filter" onAction="#filterStudents"/>
        <Button text="Show Courses" onAction="#showStudentCourses"/>
        <Button text="Delete Student" onAction="#deleteStudent"/> 
        <ListView fx:id="studentListView"/>
        <TextArea fx:id="studentCoursesArea" promptText="Courses of selected student" /> <!-- Thêm TextArea này -->
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
        <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/> 
    </children>
</VBox>
